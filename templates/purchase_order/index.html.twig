{% extends 'base.html.twig' %}

{% block title %}PurchaseOrder index{% endblock %}
{% block stylesheets %}
            <style>
                #purchaseOrderIndex {font-weight: bold;}
            </style>
        
        {% endblock %}
{% block body %}
    <h1>PurchaseOrder index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Delivery</th>
                <th>Payment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for purchase_order in purchase_orders %}
            <tr>
                <td>{{ purchase_order.id }}</td>
                <td>{{ purchase_order.email }}</td>
                <td>{{ purchase_order.phone }}</td>
                <td>{{ purchase_order.delivery }}</td>
                <td>{{ purchase_order.payment }}</td>
                <td>
                    <a href="{{ path('purchase_order_show', {'id': purchase_order.id}) }}">show</a>
                    <a href="{{ path('purchase_order_edit', {'id': purchase_order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('purchase_order_new') }}">Create new</a>
{% endblock %}
